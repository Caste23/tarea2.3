<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App1.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="Grabar audio" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>

        <Entry Placeholder="Descripsion del audio" Margin="10,70,10,50" x:Name="txtdescripcion"/>
        <Grid Margin="20,10,20,40">
            <ImageButton Source="record.png" Grid.Column="0" HorizontalOptions="Center" VerticalOptions="CenterAndExpand" WidthRequest="80" 
                     HeightRequest="80" CornerRadius="20" BorderWidth="2"  BorderColor="Gray" x:Name="btnGrabar" Clicked="btnGrabar_Clicked"/>

            <ImageButton Source="pausa.png" Grid.Column="1" HorizontalOptions="Center" VerticalOptions="CenterAndExpand" WidthRequest="80" 
                     HeightRequest="80" CornerRadius="20" BorderWidth="2"  BorderColor="Gray" x:Name="btnpausar" Clicked="btnpausa_Clicked"/>

            <ImageButton Source="list.png" Grid.Column="2" HorizontalOptions="Center" VerticalOptions="CenterAndExpand" WidthRequest="90" 
                     HeightRequest="70" CornerRadius="20" BorderWidth="2"  BorderColor="Gray" x:Name="btnlistar" Clicked="btnlistar_Clicked"/>

        </Grid>
        
    </StackLayout>
    
</ContentPage>
